<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".android.activity.PerformanceActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
      android:id="@+id/sortByTabs"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By weather" />

      <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by diet" />

    </com.google.android.material.tabs.TabLayout>
    <fragment
      android:id="@+id/fragment3"
      android:name="com.ltm.runningtracker.android.activity.fragment.PerformanceByWeatherFragment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />


  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>